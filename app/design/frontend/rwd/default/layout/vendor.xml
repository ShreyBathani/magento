<?xml version="1.0" encoding="UTF-8"?>

<layout version="1.0.0">
    
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor"><label>Vendor Account</label><url helper="vendor/getAccountUrl"/><title>Vendor Account</title><prepare/><urlParams/><position>110</position></action>
            <action method="addLink" translate="label title before_text" module="vendor"><label>Vendor Register</label><url helper="vendor/getRegisterUrl" /><title>Vendor Register</title><prepare/><urlParams/><position>120</position><li/><a/></action>
            <!-- <action method="addLink" translate="label title before_text" module="vendor"><label>Vendor Logout</label><url helper="vendor/getLogoutUrl" /><title>Vendor Logout</title><prepare/><urlParams/><position>190</position><li/><a/></action> -->
        </reference>
    </default>

    <!-- Layout for vendor login page -->
    <vendor_account_login translate="label">
        <label>Vendor Account Login Form</label>
        <!-- Ccc_Vendor -->
        <remove name="right"/>
        <remove name="left"/>
        
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        
        <reference name="content">
            <block type="vendor/form_login" name="vendor_form_login" template="vendor/form/login.phtml" />
        </reference>
    </vendor_account_login>
    
    <!-- Layout for vendor create page -->
    <vendor_account_create translate="label">
        <label>Vendor Account Registration Form</label>
        <!-- Ccc_Vendor -->
        <remove name="right"/>
        <remove name="left"/>

        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="vendor/form_register" name="vendor_form_register" template="vendor/form/register.phtml" >
                <block type="page/html_wrapper" name="vendor.form.register.fields.before" as="form_fields_before" translate="label">
                    <label>Form Fields Before</label>
                </block>
            </block>
        </reference>
    </vendor_account_create>
    
    <vendor_account_edit translate="label">
        <label>Vendor Account Edit Form</label>
        <update handle="vendor_account"/>
        <reference name="root">
            <action method="setHeaderTitle" translate="title" module="vendor"><title>Edit Account Info</title></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/form_edit" name="vendor_edit" template="vendor/form/edit.phtml"/>
        </reference>
        
        <reference name="left">
            <action method="unsetChild"><name>left.permanent.callout</name></action>
        </reference>
    </vendor_account_edit>
    
    <vendor_logged_in>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="vendor">
                <label>Vendor Log Out</label>
                <url helper="vendor/getLogoutUrl" />
                <title>Vendor Log Out</title>
                <prepare />
                <urlParams />
                <position>130</position>
            </action>
            <action method="removeLinkByUrl">
                <url helper="customer/getLoginUrl" />
            </action>
        </reference>
    </vendor_logged_in>

    <vendor_logged_out>
        <reference name="top.links">

            <action method="addLink" translate="label title" module="vendor">
                <label>Vendor Log In</label>
                <url helper="vendor/getLoginUrl" />
                <title>Vendor Log In</title>
                <prepare />
                <urlParams />
                <position>130</position>
            </action>
            <action method="removeLinkByUrl">
                <url helper="customer/getLoginUrl" />
            </action>
        </reference>
    </vendor_logged_out>
    
    <!-- Vendor account pages, rendered for all tabs in dashboard -->
    
    <vendor_account translate="label">
        
        <remove name="minicart_head"/>
        <label>Vendor My Account (All Pages)</label>
        
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        
        <!-- <reference name="top.container">
            <block type="vendor/menu" name="vendor_menu"/>
        </reference> -->

        <reference name="content">
            <block type="page/html_wrapper" name="my.account.wrapper" translate="label">
                <label>My Account Wrapper</label>
                <action method="setElementClass"><value>my-account</value></action>
            </block>
        </reference>

        <reference name="left">
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor"><name>account</name><path>vendor/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="vendor"><name>account_edit</name><path>vendor/account/edit/</path><label>Account Information</label></action>
                <action method="addLink" translate="label" module="vendor"><name>product_index</name><path>vendor/product/index/</path><label>Manage Product</label></action>
                <action method="addLink" translate="label" module="vendor"><name>order_index</name><path>vendor/order/index/</path><label>Manage Order</label></action>
                <action method="addLink" translate="label" module="vendor"><name>attribute_index</name><path>vendor/attribute/index/</path><label>Manage Attribute</label></action>
                <action method="addLink" translate="label" module="vendor"><name>group_index</name><path>vendor/group/index/</path><label>Manage Group</label></action>
            </block>
           
            <block type="catalog/product_compare_sidebar" name="catalog.compare.sidebar" template="catalog/product/compare/sidebar.phtml"/>
            <remove name="tags_popular"/>
        </reference>
    </vendor_account>

    <!-- Vendor account home dashboard layout -->

    <vendor_account_index translate="label">
        <label>Vendor My Account Dashboard</label>
        <update handle="vendor_account"/>
        <!-- Mage_Vendor -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        <reference name="my.account.wrapper">
            <block type="vendor/account_dashboard" name="vendor_account_dashboard" template="vendor/account/dashboard.phtml">
                <block type="vendor/account_dashboard_hello" name="vendor_account_dashboard_hello" as="hello" template="vendor/account/dashboard/hello.phtml"/>
                <block type="core/template" name="vendor_account_dashboard_top" as="top" />
                <block type="vendor/account_dashboard_info" name="vendor_account_dashboard_info" as="info" template="vendor/account/dashboard/info.phtml"/>
            </block>
        </reference>
    </vendor_account_index>


    <common_action>
        
        <remove name="minicart_head"/>
        <label>Vendor My Account (All Pages)</label>

        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/bootstrap.min.css</name>
            </action>
            
            <action method="addItem">
                <type>skin_js</type>
                <name>js/bootstrap.min.js</name>
            </action>
        </reference>
        
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="left">
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor"><name>account</name><path>vendor/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="vendor"><name>account_edit</name><path>vendor/account/edit/</path><label>Account Information</label></action>
                <action method="addLink" translate="label" module="vendor"><name>product_index</name><path>vendor/product/index/</path><label>Manage Product</label></action>
                <action method="addLink" translate="label" module="vendor"><name>order_index</name><path>vendor/order/index/</path><label>Manage Order</label></action>
                <action method="addLink" translate="label" module="vendor"><name>attribute_index</name><path>vendor/attribute/index/</path><label>Manage Attribute</label></action>
                <action method="addLink" translate="label" module="vendor"><name>group_index</name><path>vendor/group/index/</path><label>Manage Group</label></action>
            </block>
           
            <block type="catalog/product_compare_sidebar" name="catalog.compare.sidebar" template="catalog/product/compare/sidebar.phtml"/>
            <remove name="tags_popular"/>
        </reference>
        
        <!-- <reference name="top.container">
            <block type="vendor/menu" name="vendor_menu"/>
        </reference> -->

    </common_action>

    <vendor_product_index translate="label">
        <label>Vendor Product Grid</label>
        <update handle="common_action"></update>
        
    </vendor_product_index>

    <vendor_product_edit translate="label">
        <label>Vendor Product</label>
        <update handle="common_action"></update>
        <remove name="vendor_account_navigation"/>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/tabs.css</name>
            </action>
        </reference>
        
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
        
        <reference name="left">
            <block type="vendor/product_edit_tabs" name="vendor_product_edit_tabs" template="vendor/product/edit/tabs.phtml"/>
        </reference>

        <reference name="content">
            <block type="vendor/product_edit" name="vendor_product_edit" template="vendor/product/edit.phtml" />
        </reference>
    </vendor_product_edit>

    <vendor_attribute_index translate="label">
        <label>Attribute Grid</label>
        <update handle="common_action"></update>
    </vendor_attribute_index>

    <vendor_attribute_edit translate="label">
        <label>Add/Edit Attribute</label>
        <update handle="common_action"></update>
        <reference name="content">
            <block type="vendor/attribute_edit" name="vendor_form_login" template="vendor/attribute/edit.phtml" />
        </reference>
    </vendor_attribute_edit>

    <vendor_group_index translate="label">
        <label>Vendor Group Grid</label>
        <update handle="common_action"></update>
        
        <reference name="content">
            <block type="vendor/group_grid" name="vendor_group_grid" template="vendor/group/grid.phtml" />
        </reference>
    </vendor_group_index>

    <vendor_group_edit translate="label">
        <label>Vendor Group</label>
        <update handle="common_action"></update>
        
        <reference name="content">
            <block type="vendor/group_edit" name="vendor_group_edit" template="vendor/group/edit.phtml" />
        </reference>
    </vendor_group_edit>

    <vendor_order_index translate="label">
        <label>Order Grid</label>
        <update handle="common_action"></update>
    </vendor_order_index>

</layout>