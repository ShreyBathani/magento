<?php $orderProducts = $this->getCollection(); ?>

<div class="page-title">
    <h3><?php echo $this->__('Manage Products') ?></h3>
</div>

<table class="table table-hover" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>SKU</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <?php if($orderProducts->getData()): ?>
        <?php foreach($orderProducts as $orderProduct):?>
        <tr>
            <td><?php echo $orderProduct->getId(); ?></td>
            <td><?php echo $orderProduct->getName(); ?></td>
            <td><?php echo $orderProduct->getSku(); ?></td>
            <td><?php echo $orderProduct->getPrice(); ?></td>
        </tr>
        <?php endforeach; ?>
        <?php else: ?>
        <tr>
            <td colspan="4">No Order Available</td>
        </tr>
        <?php endif; ?>
    </tbody>
</table>