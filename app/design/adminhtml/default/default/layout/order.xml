<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <add_style>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/bootstrap.min.css</name>
            </action>
            
            <action method="addItem">
                <type>skin_js</type>
                <name>js/bootstrap.min.js</name>
            </action>
        </reference>
    </add_style>
    <adminhtml_order_create_index>
        <reference name="content">
            <block type="order/adminhtml_order_create_customer" name="customer"></block>
        </reference>
    </adminhtml_order_create_index>

    <adminhtml_order_create_new>
        <!-- <update handle="add_style"></update> -->
        <reference name="root">
            <block type="order/adminhtml_order_create_form" template="order/create/form.phtml" name="content">
                <block type="order/adminhtml_order_create_form_product" template="order/create/form/product.phtml" name="product">
                    <block type="order/adminhtml_order_create_form_product_grid" name="productGrid" />
                </block>
                <block type="order/adminhtml_order_create_form_orderItems" template="order/create/form/orderItems.phtml" name="orderItems">
                    <block type="order/adminhtml_order_create_form_orderItems_grid" template="order/create/form/orderItems/grid.phtml" name="orderItemsGrid" />
                </block>
                <block type="order/adminhtml_order_create_form_accountInfo" template="order/create/form/accountInfo.phtml" name="accountInfo">
                    <block type="order/adminhtml_order_create_form_accountInfo_form" template="order/create/form/accountInfo/form.phtml" name="accountInfoForm" />
                </block>
                <block type="order/adminhtml_order_create_form_billingAddress" template="order/create/form/billingAddress.phtml" name="billingAddress">
                    <block type="order/adminhtml_order_create_form_billingAddress_form" template="order/create/form/billingAddress/form.phtml" name="billingAddressForm" />
                </block>
                <block type="order/adminhtml_order_create_form_shippingAddress" template="order/create/form/shippingAddress.phtml" name="shippingAddress">
                    <block type="order/adminhtml_order_create_form_shippingAddress_form" template="order/create/form/shippingAddress/form.phtml" name="shippingAddressForm" />
                </block>
                <block type="order/adminhtml_order_create_form_paymentMethod" template="order/create/form/paymentMethod.phtml" name="paymentMethod">
                    <block type="order/adminhtml_order_create_form_paymentMethod_form" template="order/create/form/paymentMethod/form.phtml" name="paymentMethodForm" />
                </block>
                <block type="order/adminhtml_order_create_form_shippingMethod" template="order/create/form/shippingMethod.phtml" name="shippingMethod">
                    <block type="order/adminhtml_order_create_form_shippingMethod_form" template="order/create/form/shippingMethod/form.phtml" name="shippingMethodForm" />
                </block>
                <block type="order/adminhtml_order_create_form_orderTotal" template="order/create/form/orderTotal.phtml" name="orderTotal"/>
            </block>
        </reference>
    </adminhtml_order_create_new>
</layout>