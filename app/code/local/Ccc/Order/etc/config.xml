<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Ccc_Order>
            <version>1.0.0</version>
        </Ccc_Order>
    </modules>
    <frontend>
        <routers>
            <order>
                <use>standard</use>
                <args>
                    <module>Ccc_Order</module>
                    <frontName>order</frontName>
                </args>
            </order>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ccc_order>Ccc_Order_Adminhtml</ccc_order>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <order>
                    <file>order.xml</file>
                </order>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <order>
                <class>Ccc_Order_Model</class>
                <resourceModel>order_resource</resourceModel>
            </order>
            <order_resource>
                <class>Ccc_Order_Model_Resource</class>
                <entities>
                    <order>
                        <table>ccc_order</table>
                    </order>
                    <order_item>
                        <table>ccc_order_item</table>
                    </order_item>
                    <order_address>
                        <table>ccc_order_address</table>
                    </order_address>
                    <cart>
                        <table>ccc_cart</table>
                    </cart>
                    <cart_item>
                        <table>ccc_cart_item</table>
                    </cart_item>
                    <cart_address>
                        <table>ccc_cart_address</table>
                    </cart_address>
                </entities>
            </order_resource>
        </models>
        <resources>
            <order_setup>
                <setup>
                    <module>Ccc_Order</module>
                </setup>
            </order_setup>
        </resources>
        <helpers>
            <order>
                <class>Ccc_Order_Helper</class>
            </order>
        </helpers>
        <blocks>
            <order>
                <class>Ccc_Order_Block</class>
            </order>
        </blocks>
    </global>
</config>