<config>
	<modules>
		<Ccc_Vendor>
			<version>1.0.12</version>
		</Ccc_Vendor>
	</modules>
	<frontend>
		<routers>
			<vendor>
				<use>standard</use>
				<args>
					<module>Ccc_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
		<layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
	</frontend>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<ccc_vendor>Ccc_Vendor_Adminhtml</ccc_vendor>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<vendor>
					<file>vendor.xml</file>
				</vendor>
			</updates>
		</layout>
  	</adminhtml>
	<global>
		<events>
			<controller_action_layout_load_before>
                <observers>
                    <vendor_is_logged_in_observer>
                        <class>vendor/observer</class>
                        <method>beforeLoadLayout</method>
                    </vendor_is_logged_in_observer>
                </observers>
            </controller_action_layout_load_before>
			<sales_order_place_after>
				<observers>
					<set_vendor_id_in_sales>
						<class>vendor/observer</class>
						<method>addVendorIdInOrderItem</method>
					</set_vendor_id_in_sales>
				</observers>
			</sales_order_place_after>
		</events>
		<models>
	        <vendor>
	            <class>Ccc_Vendor_Model</class>
	            <resourceModel>vendor_resource</resourceModel>
	        </vendor>
	        <vendor_resource>
	            <class>Ccc_Vendor_Model_Resource</class>
	            <entities>
	                <vendor>
	                    <table>vendor</table>
	                </vendor>
	                <vendor_datetime>
	                	<table>vendor_datetime</table>
					</vendor_datetime>
		            <vendor_decimal>
		                <table>vendor_decimal</table>
		            </vendor_decimal>
		            <vendor_int>
		                <table>vendor_int</table>
		            </vendor_int>
		            <vendor_text>
		                <table>vendor_text</table>
		            </vendor_text>
		            <vendor_varchar>
		                <table>vendor_varchar</table>
		            </vendor_varchar>
		            <vendor_char>
		                <table>vendor_char</table>
		            </vendor_char>
		            <eav_attribute>
                        <table>vendor_eav_attribute</table>
                    </eav_attribute>
					<form_attribute>
                        <table>vendor_form_attribute</table>
                    </form_attribute>
					<eav_attribute_website>
                        <table>vendor_eav_attribute_website</table>
                    </eav_attribute_website>

					<vendor_product>
						<table>vendor_product_entity</table>
					</vendor_product>

					<vendor_product_attribute_name>
						<table>vendor_product_attribute_name</table>
					</vendor_product_attribute_name>

					<vendor_product_group_name>
						<table>vendor_product_group_name</table>
					</vendor_product_group_name>

					<vendor_product_request>
						<table>vendor_product_request</table>
					</vendor_product_request>

		        </entities>
		    </vendor_resource>
		</models>
		<resources>
            <vendor_setup>
                <setup>
                    <module>Ccc_Vendor</module>
                    <class>Ccc_Vendor_Model_Resource_Setup</class>
                </setup>
            </vendor_setup>
        </resources>
		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>
		<blocks>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>
	</global>
</config>
